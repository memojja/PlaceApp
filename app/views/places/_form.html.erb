  <br>
  <%= f.label :address %>
  <br>
  <%= f.text_area :address, placeholder: "address", rows: 10 %><br>
  <br>
  <%= f.label :establishedAt %>
  <br>
  <%= f.text_field :establishedAt, placeholder: 'established at' %><br>
  <br>
  <%= f.label :phoneNumber %>
  <br>
  <%= f.text_field :phoneNumber, placeholder: 'phone number' %><br>
  <br>
  <%= f.label :email %>
  <br>
  <%= f.text_field :email, placeholder: 'email' %><br>
  <br>
  <%= f.label :city %>
  <br>
  <%= f.text_field :city, placeholder: 'city' %><br>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_field :description, placeholder: 'description' %><br>
  <br>

  <%= f.select :category_id, @categories %>

   <br />
